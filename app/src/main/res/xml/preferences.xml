<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="message">
    <EditTextPreference
        app:key="signature"
        app:title="Hello"
        app:useSimpleSummaryProvider="true" />
    <ListPreference
        android:defaultValue="2.99"
        android:entries="@array/currency_menu"
        android:entryValues="@array/currency_value"
        android:key="Currency"
        android:summary="Please select the currency"
        android:title="Currency Option" />
    </PreferenceCategory>
</PreferenceScreen>